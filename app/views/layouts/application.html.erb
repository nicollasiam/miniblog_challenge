<!DOCTYPE html>
<html>
  <head>
    <title>MiniblogChallenge</title>
    <%= csrf_meta_tags %>

    <!-- Jansy Bootstrap for customized navbar on mobile -->
    <%= stylesheet_link_tag    '//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= yield %>


    <%= javascript_include_tag 'application' %>

    <!-- Jansy Bootstrap for customized navbar on mobile -->
    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js' %>
  </body>
</html>
