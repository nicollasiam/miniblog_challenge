<% content_for :title, "Receita de #{@post.title} - TudoGostoso" %>
<% content_for :meta_description, @post.subtitle %>
<% content_for :meta_keywords, "Receita de #{@post.title}" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="card-lg">
        <h1 class="text-orange text-left"><%= @post.head_title.upcase %></h1>
        <p class="text-left"><%= @post.subtitle %></p>
        <%= image_tag 'dish', class: 'img-card' %>
        <hr class="border-orange">
        <h3 class="text-orange text-center"><%= @post.title %></h3>
        <p class="text-center"><%= @post.content %></p>
      </div>
    </div>
  </div>
</div>
